<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.BossController">
    <!-- Panel superior: Encabezado -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #d3d3d3;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="CuñadoPay" />
        </HBox>
    </top>

    <!-- Panel izquierdo: Lista de productos seleccionados -->
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f5f5f5;">
            <Label style="-fx-font-weight: bold;" text="Detalles del Pedido" />
         <SplitPane orientation="VERTICAL" prefHeight="43.0" prefWidth="316.0">
           <items>
             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="10.0" prefWidth="334.0">
                  <children>
                     <Label layoutX="124.0" layoutY="11.0" text="Jefe atendiendo" />
                  </children>
               </AnchorPane>
           </items>
         </SplitPane>
            <TableView fx:id="tablaPedido">
                <columns>
                    <TableColumn fx:id="columnaArticulo" text="Artículo" />
                    <TableColumn fx:id="columnaCantidad" text="Cantidad" />
                    <TableColumn fx:id="columnaPrecio" text="Precio" />
                    <TableColumn fx:id="columnaTotal" text="Total" />
                </columns>
            </TableView>
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Total: €" />
            <TextField fx:id="totalPedido" editable="false" />
        </VBox>
    </left>

    <!-- Panel central: Categorías y productos -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <!-- Botones de categorías -->
            <HBox spacing="5">
                <Button style="-fx-min-width: 100px;" text="Comidas" />
                <Button style="-fx-min-width: 100px;" text="Cafes" />
                <Button style="-fx-min-width: 100px;" text="Postres" />
                <Button style="-fx-min-width: 100px;" text="Bebidas" />
            </HBox>

            <!-- Botones de productos -->
            <GridPane hgap="10" style="-fx-padding: 10;" vgap="10">
                <Button text="Coca-Cola" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Button text="Fanta" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Button text="Agua" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Button text="Red Bull" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                <Button text="Cerveza" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Button text="Tónica" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button text="Vichy" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Button text="Café" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </VBox>
    </center>

    <!-- Panel derecho: Opciones del pedido -->
    <right>
        <VBox prefHeight="168.0" prefWidth="132.0" spacing="10" style="-fx-padding: 10; -fx-background-color: #e8e8e8;">
            <Button prefHeight="30.0" prefWidth="110.0" style="-fx-background-color: orange; -fx-text-fill: white; -fx-font-size: 14px;" text="Cobrar" />
            <Button style="-fx-min-height: 40px;" text="Eliminar Producto" />
         <Label text="Gestión de la tienda" wrapText="true" />
         <Button mnemonicParsing="false" onAction="#handleAddWorker" prefHeight="42.0" prefWidth="112.0" text="Añadir Empleado" />
         <Button mnemonicParsing="false" prefHeight="39.0" prefWidth="111.0" text="Consultar Stock" />
         <Button mnemonicParsing="false" prefHeight="38.0" prefWidth="112.0" text="Consultar Ventas" />
         <Button mnemonicParsing="false" onAction="#handlerShowAllProducts" prefHeight="35.0" prefWidth="111.0" text="Listado Productos" />
         <Button mnemonicParsing="false" onAction="#handleAddProduct" prefHeight="30.0" prefWidth="109.0" text="Añadir Producto" />
         <Button mnemonicParsing="false" onAction="#handleAddBoss" prefHeight="32.0" prefWidth="114.0" text="Añadir Jefe" />
        </VBox>
    </right>

    <!-- Panel inferior: Opciones de control -->
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10; -fx-alignment: center;">
            <Button text="Nuevo Pedido" />
            <Button onAction="#handleBackButton" text="Salir" />
        </HBox>
    </bottom>
</BorderPane>
