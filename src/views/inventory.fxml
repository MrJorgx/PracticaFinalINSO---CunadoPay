<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.InventoryController">
    <!-- Panel superior: Encabezado -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #d3d3d3;">
            <Label text="CuñadoPay" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Panel izquierdo: Lista de productos seleccionados -->
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f5f5f5;">
            <Label text="Detalles del Pedido" style="-fx-font-weight: bold;" />
            <TableView fx:id="tablaPedido">
                <columns>
                    <TableColumn text="Artículo" fx:id="columnaArticulo" />
                    <TableColumn text="Cantidad" fx:id="columnaCantidad" />
                    <TableColumn text="Precio" fx:id="columnaPrecio" />
                    <TableColumn text="Total" fx:id="columnaTotal" />
                </columns>
            </TableView>
            <Label text="Total: €" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TextField fx:id="totalPedido" editable="false" />
        </VBox>
    </left>

    <!-- Panel central: Categorías y productos -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <!-- Botones de categorías -->
            <HBox spacing="5">
                <Button text="Refrescos" style="-fx-min-width: 100px;" onAction="#mostrarCategoriaRefrescos" />
                <Button text="Cervezas" style="-fx-min-width: 100px;" onAction="#mostrarCategoriaCervezas" />
                <Button text="Cafés" style="-fx-min-width: 100px;" onAction="#mostrarCategoriaCafes" />
                <Button text="Comida" style="-fx-min-width: 100px;" onAction="#mostrarCategoriaComida" />
            </HBox>

            <!-- Botones de productos -->
            <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
                <Button text="Coca-Cola" onAction="#agregarProducto" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Button text="Fanta" onAction="#agregarProducto" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Button text="Agua" onAction="#agregarProducto" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Button text="Red Bull" onAction="#agregarProducto" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                
                <Button text="Cerveza" onAction="#agregarProducto" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Button text="Tónica" onAction="#agregarProducto" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button text="Vichy" onAction="#agregarProducto" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Button text="Café" onAction="#agregarProducto" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            </GridPane>
        </VBox>
    </center>

    <!-- Panel derecho: Opciones del pedido -->
    <right>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #e8e8e8;">
            <Button text="Cobrar" onAction="#cobrarPedido" style="-fx-background-color: orange; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button text="Eliminar Producto" onAction="#eliminarProducto" style="-fx-min-height: 40px;" />
        </VBox>
    </right>

    <!-- Panel inferior: Opciones de control -->
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10; -fx-alignment: center;">
            <Button text="Nuevo Pedido" onAction="#nuevoPedido" />
            <Button text="Salir" onAction="#salir" />
        </HBox>
    </bottom>
</BorderPane>
